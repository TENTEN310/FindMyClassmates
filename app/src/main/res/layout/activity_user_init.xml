<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".regLogInActivity.UserInit">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/init_header"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:baselineAligned="false"
                android:fontFamily="sans-serif-black"
                android:text="@string/let_s_get_to_know_more_about_you"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/init_username_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="center_horizontal"
                android:text="@string/let_s_start_with_an_username"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/init_username_input"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:background="@drawable/round_textedit"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="text"
                android:autofillHints="username" />

            <TextView
                android:id="@+id/init_year_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="center_horizontal"
                android:text="@string/what_s_your_graduation_year"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/init_year_input"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:background="@drawable/round_textedit"
                android:ems="10"
                android:hint="@string/year"
                android:inputType="number" />

            <TextView
                android:id="@+id/init_major_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/what_s_your_major"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/init_major_input"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:layout_marginBottom="50sp"
                android:background="@drawable/round_textedit"
                android:autofillHints="majors" />

            <TextView
                android:id="@+id/init_school_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/which_school_are_you_from"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/init_school_spinner"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:layout_marginBottom="50sp"
                android:background="@drawable/round_textedit" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/init_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:background="@drawable/round_textedit"
                android:text="@string/next" />

            <TextView
                android:id="@+id/resentText"
                android:background="@drawable/text_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="50sp"
                android:gravity="center_horizontal"
                android:text="@string/resent_verification_email"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>