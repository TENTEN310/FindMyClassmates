<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInit">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:fontFamily="sans-serif-black"
                android:text="Let's get to know more about you!"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="center_horizontal"
                android:text="what's your graduation year?"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:background="@drawable/round_textedit"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="what's your major?"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:background="@drawable/round_textedit"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="what's your major?"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/round_textedit"
                android:id="@+id/editTextText3"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="what's your major?"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/round_textedit"
                android:id="@+id/editTextText4"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="what's your major?"
                android:textSize="20sp" />

            <EditText
                android:background="@drawable/round_textedit"
                android:id="@+id/editTextText5"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="which school are you from?"
                android:textSize="20sp" />

            <Spinner
                android:background="@drawable/round_textedit"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_margin="30sp"

                 />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50sp"
                android:background="@drawable/round_textedit"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>